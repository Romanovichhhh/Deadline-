<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/pin_code_view_symbols_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/pin_code_view_symbol_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/view_pin_symbol_empty" />

        <View
            android:id="@+id/pin_code_view_symbol_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/view_pin_symbol_empty" />

        <View
            android:id="@+id/pin_code_view_symbol_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/view_pin_symbol_empty" />

        <View
            android:id="@+id/pin_code_view_symbol_4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="7dp"
            android:background="@drawable/view_pin_symbol_empty" />

    </LinearLayout>

    <TextView
        android:id="@+id/pin_code_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearanceRegular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pin_code_view_symbols_container"
        tools:text = "Введите короткий пароль"/>

</androidx.constraintlayout.widget.ConstraintLayout>