<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVMPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MVVMPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MVVMPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MVVMPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearanceDefault" parent="">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearanceRegular" parent="TextAppearanceDefault">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>
    <style name="TextAppearanceTitle" parent="TextAppearanceDefault">
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
</resources>